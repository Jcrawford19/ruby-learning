- title "Sign up"

.page-header
  %h3 Create New Account

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal col-md-9" }) do |f|

  - if f.object.errors.any?
    .alert.alert-danger{ role: "alert" }
      %ul
        - f.object.errors.full_messages.each do |message|
          %li
            %span.sr-only Error:
            = message

  .field.form-group
    = f.label :first_name, { class: "col-md-2 control-label" }
    .col-md-10
      = f.text_field :first_name, { autofocus: true, class: "form-control", placeholder: "First Name" }

  .field.form-group
    = f.label :last_name, { class: "col-md-2 control-label" }
    .col-md-10
      = f.text_field :last_name, { class: "form-control", placeholder: "Last Name" }

  .field.form-group
    = f.label :email, { class: "col-md-2 control-label" }
    .col-md-10
      = f.email_field :email, { class: "form-control", placeholder: "Email Address" }

  .field.form-group
    = f.label :password, { class: "col-md-2 control-label" }
    .col-md-10
      = f.password_field :password, { autocomplete: "off", class: "form-control", placeholder: "Password" }
      - if @validatable
        %span.help-block
          (#{@minimum_password_length} characters minimum)

  .field.form-group
    = f.label :password_confirmation, { class: "col-md-2 control-label" }
    .col-md-10
      = f.password_field :password_confirmation, { autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" }

  %br
  .actions.form-group.col-md-12.clearfix
    = f.submit "Sign up", { class: "btn btn-primary col-md-3" }

  .form-group.col-md-12.clearfix
    = render "users/shared/links"
